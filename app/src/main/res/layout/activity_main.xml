<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivRangeEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/edit" />

            <ImageView
                android:id="@+id/ivRandom"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/dice" />

            <ImageView
                android:id="@+id/ivMode"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/play" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nowRange"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvNowRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nowLine"
                android:textSize="20sp" />
        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvNum0"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@color/onPause"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="0"
                    android:textColor="@color/txtNum"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tvNum1"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@color/onPause"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="0"
                    android:textColor="@color/txtNum"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tvNum2"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@color/onPause"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="0"
                    android:textColor="@color/txtNum"
                    android:textSize="25sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvNum3"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@color/onPause"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="0"
                    android:textColor="@color/txtNum"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tvNum4"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@color/onPause"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="0"
                    android:textColor="@color/txtNum"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tvNum5"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@color/onPause"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="0"
                    android:textColor="@color/txtNum"
                    android:textSize="25sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvNum6"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@color/onPause"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="0"
                    android:textColor="@color/txtNum"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tvNum7"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@color/onPause"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="0"
                    android:textColor="@color/txtNum"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tvNum8"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@color/onPause"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="0"
                    android:textColor="@color/txtNum"
                    android:textSize="25sp" />

            </TableRow>

        </TableLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivCanves"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>


</FrameLayout>
